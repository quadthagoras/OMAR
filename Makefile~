CC=g++
CFLAGS=`pkg-config opencv --cflags`
LIBS=`pkg-config opencv --libs`

all: test read.o question.o project.o

test: test.o align.o
	$(CC) test.o align.o -o test $(CFLAGS) $(LIBS)

test.o: test.cpp
	$(CC) -c test.cpp $(CFLAGS)

project.o: project.cpp
	$(CC) -c project.cpp $(CFLAGS)

align.o: align.cpp
	$(CC) -c align.cpp $(CFLAGS)

question.o: question.cpp
	$(CC) -c question.cpp $(CFLAGS)

read.o: read.cpp
	$(CC) -c read.cpp $(CFLAGS)

clean:
	rm -rf *.o test