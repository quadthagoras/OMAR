#include "cv.h"
#include "highgui.h"
#include "align.h"
#include "read.h"
#include <iostream>

using namespace cv;

int main() {
  Mat src, org;
  src = imread("1-1.jpg");

  rotateImage(src, src, 3);
  org = src;
  std::cout << "rotated image" << std::endl;

  vector<Vec3f> circles;
  pyrDown(src, src, Size(src.cols/2, src.rows/2));

  align(src, src);

  pyrDown(src, src, Size(src.cols/2, src.rows/2));
  pyrDown(org, org, Size(org.cols/2, org.rows/2));
  pyrDown(org, org, Size(org.cols/2, org.rows/2));
  std::cout << "scaled images down" << std::endl;

  namedWindow("circles", 1);
  imshow("circles", src);
  namedWindow("org", 1);
  imshow("org", org);

  waitKey(0);
  return 0;
}
